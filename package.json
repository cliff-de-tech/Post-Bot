{
    "name": "linkedin-post-bot",
    "version": "1.0.0",
    "description": "AI-powered LinkedIn content automation from GitHub activity",
    "private": true,
    "scripts": {
        "dev": "cd web && npm run dev",
        "build": "npm run generate:types && cd web && npm run build",
        "start": "cd web && npm run start",
        "lint": "cd web && npm run lint",
        "backend": "cd backend && python app.py",
        "generate:types": "node scripts/generate-api-types.js",
        "prebuild": "npm run generate:types",
        "postinstall": "npm run generate:types || echo 'Type generation skipped (backend not running)'"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/cliff-de-tech/Linkedin-Post-Bot.git"
    },
    "keywords": [
        "linkedin",
        "automation",
        "github",
        "ai",
        "content-generation"
    ],
    "author": "Clifford Opoku-Sarkodie",
    "license": "MIT",
    "devDependencies": {
        "openapi-typescript": "^7.0.0"
    }
}